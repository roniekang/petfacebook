{
  "name": "pettopia",
  "version": "0.1.0",
  "private": true,
  "description": "Pet-centered social network service",
  "scripts": {
    "dev": "pnpm --parallel -r run dev",
    "dev:web": "pnpm --filter @pettopia/web dev",
    "dev:api": "pnpm --filter @pettopia/api dev",
    "build": "pnpm -r run build",
    "build:web": "pnpm --filter @pettopia/web build",
    "build:api": "pnpm --filter @pettopia/api build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "db:generate": "pnpm --filter @pettopia/database generate",
    "db:migrate": "pnpm --filter @pettopia/database migrate",
    "db:seed": "pnpm --filter @pettopia/database seed",
    "clean": "pnpm -r exec rm -rf node_modules dist .next .turbo"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver",
      "bcrypt"
    ]
  }
}
